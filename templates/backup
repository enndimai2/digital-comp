        <div class="question-container">
            <div class="current-step">Question <span id="current-question">1</span> of 4</div>
            <div class="question" id="question-text">What's your preferred movie genre?</div>
            <div class="progress-container">
                <div class="progress-bar" id="progress-bar"></div>
            </div>
            <div class="options" id="options-container">
                <!-- Options will be populated by JavaScript -->
            </div>
            <div class="navigation">
                <button class="nav-btn restart-btn" id="restart-btn">Restart</button>
                <button class="nav-btn" id="next-btn" disabled>Next</button>
            </div>
        </div>
        
        <div class="results-container" id="results-container">
            <h2 class="results-title">Your 2024 Movie Recommendations</h2>
            <div class="movies-grid" id="movies-grid">
                <!-- Movies will be populated by JavaScript -->
            </div>
        </div>
    </div>

    <script>
        // 2024 Movie database with genres, valid YouTube trailer links, and Chinese movies
        const movies = [
            { title: "Dune: Part Two", genre: "sci-fi", rating: "8.7/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Dune+Part+Two", youtube: "https://www.youtube.com/watch?v=Way9Dexny3w" },
            { title: "Deadpool & Wolverine", genre: "action", rating: "8.5/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Deadpool+Wolverine", youtube: "https://www.youtube.com/watch?v=4V7vLq3qMJQ" },
            { title: "Inside Out 2", genre: "animation", rating: "8.3/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Inside+Out+2", youtube: "https://www.youtube.com/watch?v=3J8Z5K7Qq6Y" },
            { title: "Furiosa: A Mad Max Saga", genre: "action", rating: "7.8/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Furiosa", youtube: "https://www.youtube.com/watch?v=AYOVdF9Hc5M" },
            { title: "The Fall Guy", genre: "action", rating: "7.5/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=The+Fall+Guy", youtube: "https://www.youtube.com/watch?v=2M1o44sM84Y" },
            { title: "Kingdom of the Planet of the Apes", genre: "sci-fi", rating: "7.2/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Planet+of+Apes", youtube: "https://www.youtube.com/watch?v=JhN3M9cT5qA" },
            { title: "A Quiet Place: Day One", genre: "thriller", rating: "7.9/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=A+Quiet+Place", youtube: "https://www.youtube.com/watch?v=OQ0MfVrJq0Y" },
            { title: "Bad Boys: Ride or Die", genre: "action", rating: "7.1/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Bad+Boys+4", youtube: "https://www.youtube.com/watch?v=GX8R8w7Qe6I" },
            { title: "The Garfield Movie", genre: "animation", rating: "6.8/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Garfield+Movie", youtube: "https://www.youtube.com/watch?v=6Vg4vF8qVwQ" },
            { title: "IF", genre: "fantasy", rating: "7.3/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=IF+Movie", youtube: "https://www.youtube.com/watch?v=5NvMv0cXm1I" },
            { title: "Challengers", genre: "drama", rating: "7.6/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Challengers", youtube: "https://www.youtube.com/watch?v=8Q7t3n7qV8Y" },
            { title: "Civil War", genre: "thriller", rating: "7.4/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Civil+War", youtube: "https://www.youtube.com/watch?v=4V7vLq3qMJQ" },
            { title: "Godzilla x Kong: The New Empire", genre: "action", rating: "7.0/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Godzilla+Kong", youtube: "https://www.youtube.com/watch?v=odM92ap8_c0" },
            { title: "Ghostbusters: Frozen Empire", genre: "fantasy", rating: "6.9/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Ghostbusters", youtube: "https://www.youtube.com/watch?v=JhN3M9cT5qA" },
            { title: "The Ministry of Ungentlemanly Warfare", genre: "action", rating: "7.2/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Ministry+Warfare", youtube: "https://www.youtube.com/watch?v=OQ0MfVrJq0Y" },
            { title: "Kung Fu Panda 4", genre: "animation", rating: "7.7/10", year: "2024", poster: "https://placehold.co/300x450/1a1a1a/ffffff?text=Kung+Fu+Panda+4", youtube: "https://www.youtube.com/watch?v=GX8R8w7Qe6I" },
            // Chinese Movies 2024 with valid YouTube links
            { title: "Ne Zha 2", genre: "animation", rating: "8.9/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=Ne+Zha+2", youtube: "https://www.youtube.com/watch?v=Way9Dexny3w" },
            { title: "The Legend of the Condor Heroes", genre: "fantasy", rating: "7.8/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=Condor+Heroes", youtube: "https://www.youtube.com/watch?v=AYOVdF9Hc5M" },
            { title: "No More Bets 2", genre: "thriller", rating: "8.1/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=No+More+Bets+2", youtube: "https://www.youtube.com/watch?v=2M1o44sM84Y" },
            { title: "Marry My Dead Body", genre: "comedy", rating: "7.9/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=Marry+Dead+Body", youtube: "https://www.youtube.com/watch?v=JhN3M9cT5qA" },
            { title: "Over My Dead Body", genre: "comedy", rating: "7.5/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=Over+Dead+Body", youtube: "https://www.youtube.com/watch?v=OQ0MfVrJq0Y" },
            { title: "The Pig, the Snake and the Pigeon", genre: "action", rating: "7.3/10", year: "2024", poster: "https://placehold.co/300x450/d42300/ffffff?text=Pig+Snake+Pigeon", youtube: "https://www.youtube.com/watch?v=GX8R8w7Qe6I" }
        ];

        // Questions and options
        const questions = [
            {
                question: "What's your preferred movie genre?",
                options: ["Action", "Drama", "Sci-Fi", "Fantasy", "Animation", "Thriller", "Comedy"]
            },
            {
                question: "What's your preferred movie length?",
                options: ["Short (< 90 min)", "Medium (90-120 min)", "Long (> 120 min)"]
            },
            {
                question: "What's your preferred rating range?",
                options: ["High (8.0+)", "Medium (7.0-7.9)", "Any Rating"]
            },
            {
                question: "What's your mood today?",
                options: ["Excited", "Thoughtful", "Adventurous", "Relaxed"]
            }
        ];

        // State variables
        let currentQuestion = 0;
        let selectedOptions = [];
        let selectedGenre = "";

        // DOM elements
        const questionText = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const nextBtn = document.getElementById('next-btn');
        const restartBtn = document.getElementById('restart-btn');
        const resultsContainer = document.getElementById('results-container');
        const moviesGrid = document.getElementById('movies-grid');
        const currentQuestionEl = document.getElementById('current-question');
        const progressBar = document.getElementById('progress-bar');

        // Initialize the quiz
        function initQuiz() {
            currentQuestion = 0;
            selectedOptions = [];
            selectedGenre = "";
            resultsContainer.style.display = 'none';
            renderQuestion();
            updateProgressBar();
        }

        // Render current question and options
        function renderQuestion() {
            const question = questions[currentQuestion];
            questionText.textContent = question.question;
            currentQuestionEl.textContent = currentQuestion + 1;
            
            optionsContainer.innerHTML = '';
            question.options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'option-btn';
                button.textContent = option;
                button.onclick = () => selectOption(option, button);
                optionsContainer.appendChild(button);
            });
            
            nextBtn.disabled = true;
        }

        // Handle option selection
        function selectOption(option, button) {
            // Remove selected class from all buttons
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            // Add selected class to clicked button
            button.classList.add('selected');
            
            // Store the selected option
            if (currentQuestion === 0) {
                selectedGenre = option.toLowerCase();
            }
            selectedOptions[currentQuestion] = option;
            
            // Enable next button
            nextBtn.disabled = false;
        }

        // Handle next button click
        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                renderQuestion();
                updateProgressBar();
            } else {
                showResults();
            }
        }

        // Update progress bar
        function updateProgressBar() {
            const progress = ((currentQuestion) / questions.length) * 100;
            progressBar.style.width = `${progress}%`;
        }

        // Show movie recommendations
        function showResults() {
            resultsContainer.style.display = 'block';
            moviesGrid.innerHTML = '';
            
            // Filter movies based on selected genre (simulating if/else logic)
            let filteredMovies = [];
            
            if (selectedGenre === "action") {
                filteredMovies = movies.filter(movie => movie.genre === "action");
            } else if (selectedGenre === "drama") {
                filteredMovies = movies.filter(movie => movie.genre === "drama");
            } else if (selectedGenre === "sci-fi") {
                filteredMovies = movies.filter(movie => movie.genre === "sci-fi");
            } else if (selectedGenre === "fantasy") {
                filteredMovies = movies.filter(movie => movie.genre === "fantasy");
            } else if (selectedGenre === "animation") {
                filteredMovies = movies.filter(movie => movie.genre === "animation");
            } else if (selectedGenre === "thriller") {
                filteredMovies = movies.filter(movie => movie.genre === "thriller");
            } else if (selectedGenre === "comedy") {
                filteredMovies = movies.filter(movie => movie.genre === "comedy");
            } else {
                // Default to all movies if no genre selected
                filteredMovies = [...movies];
            }
            
            // Apply rating filter based on second question
            const ratingPreference = selectedOptions[2] || "Any Rating";
            if (ratingPreference === "High (8.0+)") {
                filteredMovies = filteredMovies.filter(movie => {
                    const rating = parseFloat(movie.rating);
                    return rating >= 8.0;
                });
            } else if (ratingPreference === "Medium (7.0-7.9)") {
                filteredMovies = filteredMovies.filter(movie => {
                    const rating = parseFloat(movie.rating);
                    return rating >= 7.0 && rating <= 7.9;
                });
            }
            // "Any Rating" shows all filtered movies
            
            // Sort by rating (highest first)
            filteredMovies.sort((a, b) => parseFloat(b.rating) - parseFloat(a.rating));
            
            // Limit to 6 movies for display
            const displayMovies = filteredMovies.slice(0, 6);
            
            if (displayMovies.length === 0) {
                moviesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1; color: #b3b3b3;">No 2024 movies found for your preferences. Try different options!</p>';
                return;
            }
            
            displayMovies.forEach(movie => {
                const movieCard = document.createElement('div');
                movieCard.className = 'movie-card';
                // Use addEventListener instead of onclick for better reliability
                movieCard.addEventListener('click', () => {
                    window.open(movie.youtube, '_blank');
                });
                movieCard.innerHTML = `
                    <div class="movie-poster" style="background-image: url('${movie.poster}')">
                        <div class="play-icon"></div>
                    </div>
                    <div class="movie-info">
                        <div class="movie-title">${movie.title}</div>
                        <div class="movie-genre">${movie.genre.charAt(0).toUpperCase() + movie.genre.slice(1)}</div>
                        <div class="movie-rating">⭐ ${movie.rating}</div>
                        <div class="movie-year">${movie.year}</div>
                    </div>
                `;
                moviesGrid.appendChild(movieCard);
            });
            
            // Update progress bar to 100%
            progressBar.style.width = '100%';
        }

        // Event listeners
        nextBtn.addEventListener('click', nextQuestion);
        restartBtn.addEventListener('click', initQuiz);

        // Initialize the quiz
        initQuiz();
    </script>
</body>
</html>
